package day2;

import java.awt.List;
import java.io.BufferedReader;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.io.InputStream;
import java.util.ArrayList;

public class Day_02_01 {

	public static void main(String[] args) {
		// Separate lines
		// Create new Box with each line
		
		ArrayList<Box> boxes = new ArrayList<Box>();
		int wrappingPaperArea = 0;
		int totalRibbonLength = 0;
		File file = null;
		BufferedReader br;
		try {
			// Go through lines and separate them
			int numLines = 0;
			file = new File("src/day2/input2.txt");
			br = new BufferedReader(new FileReader(file));
			String line = null;  
			while ((line = br.readLine()) != null)  
			{  
				numLines++;
				boxes.add(new Box(line));
			}
			for(int i = 0; i < boxes.size(); i++) {
				wrappingPaperArea += boxes.get(i).getWrappingPaper();
				totalRibbonLength += boxes.get(i).getRibbonLength();
			}
			System.out.println(wrappingPaperArea);
			System.out.println(totalRibbonLength);
			
			// Testing
			Box testBox = new Box("10x5x5");
			Box testBox2 = new Box("5x5x10");
			Box testBox3 = new Box("5x10x5");
			System.out.println(testBox.getWrappingPaper() + " " + testBox2.getWrappingPaper() + " " + testBox3.getWrappingPaper());
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}